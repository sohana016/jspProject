    </application>
    <converter>
        <converter-class>com.j2ee.flight.AirportConverter</converter-class>
        <converter-id>com.Airport</converter-id>
    </converter>
    <validator>
        <validator-class>com.j2ee.flight.CustomValidator</validator-class>
        <validator-id>com.customValidator</validator-id>
    </validator>
